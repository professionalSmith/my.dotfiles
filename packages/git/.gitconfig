[alias]
    branches = for-each-ref --sort=-committerdate --format=\"%(color:blue)%(color:bold)%(refname:short) %(color:green)updated %(color:red)%(authordate:relative) %(color:green)by %(color:white)%(authorname)\" refs remotes
    cane = commit --amend --no-edit
    co = checkout
    cob = checkout -b
    dt = difftool --gui
    dtc = difftool --no-gui
    graph = log --graph --abbrev-commit --decorate --format=format:'%C(bold blue)%h%C(reset) - %C(bold cyan)%aD%C(reset) %C(bold green)(%ar)%C(reset)%C(bold yellow)%d%C(reset)%n'' %C(white)%s%C(reset) %C(dim white)- %an%C(reset)' --all
    graph-short = log --graph --abbrev-commit --decorate --date=relative --format=format:'%C(bold blue)%h%C(reset) - %C(bold green)(%ar)%C(reset) %C(white)%s%C(reset) %C(dim white)- %an%C(reset)%C(bold yellow)%d%C(reset)' --all
    mt = mergetool --gui
    peak = log --oneline
    sai = "!f() { git stash apply stash@{$1}; }; f"
    save = stash --all
    sb = "!f() { git stash branch $1; }; f"
    sd = "!f() { read -p 'Drop all? [y/n]: ' d; case $d in y) git stash drop;; n) echo 'aborting';; esac; }; f"
    sdi = "!f() { git stash drop stash@{$1}; }; f"
    sl = stash list
    sp = stash pop
    spi = "!f() { git stash pop stash@{$1}; }; f"
[cola]
	autoloadcommittemplate = true
	spellcheck = false
	startupmode = list
	tabwidth = 4
[commit]
	template = ~/.gitmessage
[core]
    attributesfile = ~/.gitattributes
    autocrlf = input
    editor = micro
	excludesfile = ~/.gitignore
    precomposeUnicode = true
	pager = diff-so-fancy | less --tabs=4 -RFX
    filemode = false
[credential]
    helper = osxkeychain
    UseHttpPath = true
[diff]
    tool = meld
[difftool]
    prompt = false
[difftool "meld"]
    cmd = meld $LOCAL $REMOTE
[init]
	defaultBranch = main
[interactive]
	diffFilter = diff-so-fancy --patch
[merge]
    guitool = meld
[mergetool]
	keepBackup = false
[mergetool "meld"]
    cmd = meld "$LOCAL" "$MERGED" "$REMOTE" --output "$MERGED"
    trustExitCode = true
[pull]
	rebase = true
